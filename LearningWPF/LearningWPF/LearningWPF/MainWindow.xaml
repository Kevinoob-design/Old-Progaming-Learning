    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">

                <MenuItem x:Name="menuNew" Header="_New" InputGestureText="Cotrl+N">
                    <MenuItem.Icon>
                        <Image Source="./Resources/NewDiagram_16x_32.bmp"/>
                    </MenuItem.Icon>
                </MenuItem>

                <MenuItem x:Name="menuOpen" Header="_Open" InputGestureText="Cotrl+O" Click="MenuOpen_Click">
                    <MenuItem.Icon>
                        <Image Source="./Resources/OpenFolder_16x_32.bmp"/>
                    </MenuItem.Icon>
                </MenuItem>

                <MenuItem x:Name="menuSave" Header="_Save" InputGestureText="Cotrl+S" Click="MenuSave_Click">
                    <MenuItem.Icon>
                        <Image Source="./Resources/SaveAll_16x_32.bmp"/>
                    </MenuItem.Icon>
                </MenuItem>

                <MenuItem x:Name="menuExit" Header="Exit" Click="MenuExit_Click">
                    <MenuItem.Icon>
                        <Image Source="./Resources/Exit_16x_32.bmp"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>

            <MenuItem Header="_Edit">
                <MenuItem x:Name="menuCut" Header="Cut" Command="ApplicationCommands.Cut" 
                          InputGestureText="Ctrl+X"/>
                <MenuItem x:Name="menuCopy" Header="Copy" Command="ApplicationCommands.Copy" 
                          InputGestureText="Ctrl+C"/>
                <MenuItem x:Name="menuPaste" Header="Paste" Command="ApplicationCommands.Paste" 
                          InputGestureText="Ctrl+V"/>

                <Separator />

                <MenuItem Header="_Font" InputGestureText="Ctrl+F">
                    <MenuItem x:Name="menuFontTimes" Header="Times" IsCheckable="True" StaysOpenOnClick="True" 
                              Click="MenuFontTimes_Click"/>

                    <MenuItem x:Name="menuFontCourier" Header="Courier" IsCheckable="True" StaysOpenOnClick="True" 
                              Click="MenuFontCourier_Click"/>

                    <MenuItem x:Name="menuFontArial" Header="Arial" IsCheckable="True" StaysOpenOnClick="True" 
                              Click="MenuFontArial_Click"/>
                </MenuItem>
            </MenuItem>

            <MenuItem Header="_Other Stuff">

            </MenuItem>
        </Menu>

        <ToolBarTray DockPanel.Dock="Top">
            <ToolBar>
                <Button x:Name="tbOpen" ToolTip="Open File" Click="MenuOpen_Click">
                    <Image Source="./Resources/OpenFolder_16x_32.bmp"/>
                </Button>
                <Button x:Name="tbSave" ToolTip="Save File" Click="MenuOpen_Click">
                    <Image Source="./Resources/SaveAll_16x_32.bmp"/>
                </Button>

                <Separator/>

                <Button x:Name="tbCut" Command="ApplicationCommands.Cut">
                    <Image Source="./Resources/Cut_16x_32.bmp"/>
                </Button>
                <Button x:Name="tbCopy" Command="ApplicationCommands.Copy">
                    <Image Source="./Resources/Copy_16x_32.bmp"/>
                </Button>
                <Button x:Name="tbPaste" Command="ApplicationCommands.Paste">
                    <Image Source="./Resources/Paste_16x_32.bmp"/>
                </Button>

                <Separator/>

                <Label>Font Size:</Label>
                <ComboBox x:Name="comboFontSize" SelectionChanged="ComboFontSize_SelectionChanged" 
                          DropDownClosed="ComboFontSize_DropDownClosed">
                    <ComboBoxItem>10</ComboBoxItem>
                    <ComboBoxItem IsSelected="True">12</ComboBoxItem>
                    <ComboBoxItem>14</ComboBoxItem>
                    <ComboBoxItem>16</ComboBoxItem>
                </ComboBox>
            </ToolBar>
        </ToolBarTray>


        <TabControl Height="360" VerticalAlignment="Top" Width="789">

            <TabItem Header="Calendar">
                <Grid Background="#FFE5E5E5">

                    <Calendar x:Name="MyCalendar" HorizontalAlignment="Left" Margin="2,4,0,0" 
                              Background="AliceBlue" 
                              DisplayMode="Month" DisplayDateStart="3/1/2017" 
                              DisplayDateEnd="3/31/2017" 
                              FirstDayOfWeek="Monday" 
                              IsTodayHighlighted="True" 
                               SelectedDatesChanged="MyCalendar_SelectedDatesChanged" 
                              VerticalAlignment="Top">

                        <Calendar.BlackoutDates>
                            <CalendarDateRange Start="3/1/2017" End="3/10/2017">

                            </CalendarDateRange>
                        </Calendar.BlackoutDates>

                        <Calendar.SelectedDate>
                            <sys:DateTime>3/25/2017</sys:DateTime>
                        </Calendar.SelectedDate>
                    </Calendar>

                    <TextBox x:Name="tbDataSelected" HorizontalAlignment="Left" 
                             Height="23" Margin="237,32,0,0" 
                             TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                </Grid>
            </TabItem>

            <TabItem Header="Draw" KeyUp="TabItem_KeyUp">
                <StackPanel Background="#FFE5E5E5">
                    <ToolBar x:Name="DrawingToolbar" Height="52">
                        <RadioButton BorderBrush="#FFD2D2D2" Height="50" Width="80" Content="Draw" GroupName="drawGroup"  Click="DrawButton_Click"/>
                        <RadioButton BorderBrush="#FFD2D2D2" Content="Erase" Height="50" Width="80" GroupName="drawGroup" Click="DrawButton_Click"/>
                        <RadioButton BorderBrush="#FFD2D2D2" Content="Select" Height="50" Width="80" GroupName="drawGroup" Click="DrawButton_Click"/>
                        <Button Background="#FFD2D2D2" Content="Save" Height="50" Width="80" Click="SaveButton_Click"/>
                        <Button Background="#FFD2D2D0" Content="Open" Height="50" Width="80" Click="OpenButton_Click"/>
                    </ToolBar>
                    <InkCanvas x:Name="DrawingCanvas" Height="289">
                        <InkCanvas.DefaultDrawingAttributes>
                            <DrawingAttributes x:Name="strokeAttr" Width="3" Height="3" Color="black"/>
                        </InkCanvas.DefaultDrawingAttributes>
                    </InkCanvas>
                </StackPanel>
            </TabItem>

            <TabItem Header="Escribe un texto">
                <Grid Background="#FFE5E5E5">
                    <TextBox x:Name="txtBoxDoc" Height="333" Width="700" FontSize="12"
                 VerticalAlignment="Center"/>
                </Grid>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>
